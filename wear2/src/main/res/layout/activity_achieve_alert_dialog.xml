<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/corners_bg"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_marginLeft="20dp"
                    style="@style/text4"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:text="@string/achievement" />

                <TextView
                    android:layout_marginRight="20dp"
                    android:id="@+id/achievement_value"
                    style="@style/text5"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_centerHorizontal="true"
                    android:gravity="center_vertical|right"
                    android:text="@string/step_total" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="8dp" />

            <LinearLayout
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageButton
                        android:layout_gravity="center"
                        android:id="@+id/achievement_img_medal1"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:background="#00000000"
                        android:clickable="true"
                        android:scaleType="fitCenter"
                        android:src="@drawable/medal_1"></ImageButton>

                    <TextView
                        android:layout_gravity="center"
                        android:id="@+id/achievement_text_medal1"
                        android:layout_width="wrap_content"
                        android:layout_height="22dp"
                        android:gravity="center|bottom"
                        android:text="累计5000步"
                        android:textColor="@color/black_alpha"
                        android:textSize="12sp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="20dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageButton
                        android:layout_gravity="center"
                        android:id="@+id/achievement_img_medal2"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:background="#00000000"
                        android:clickable="true"
                        android:scaleType="fitCenter"
                        android:src="@drawable/medal_2"></ImageButton>

                    <TextView
                        android:id="@+id/achievement_text_medal2"
                        android:layout_width="wrap_content"
                        android:layout_height="22dp"
                        android:gravity="center|bottom"
                        android:text="累计20000步"
                        android:layout_gravity="center"
                        android:textColor="@color/black_alpha"
                        android:textSize="12sp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="20dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageButton
                        android:layout_gravity="center"
                        android:id="@+id/achievement_img_medal3"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:background="#00000000"
                        android:clickable="true"
                        android:scaleType="fitCenter"
                        android:src="@drawable/medal_3"></ImageButton>

                    <TextView
                        android:id="@+id/achievement_text_medal3"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="22dp"
                        android:gravity="center|bottom"
                        android:text="累计100000步"
                        android:textColor="@color/black_alpha"
                        android:textSize="12sp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="20dp" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageButton
                        android:id="@+id/achievement_img_medal4"
                        android:layout_gravity="center"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:background="#00000000"
                        android:clickable="true"
                        android:scaleType="fitCenter"
                        android:src="@drawable/medal_4"></ImageButton>

                    <TextView
                        android:id="@+id/achievement_text_medal4"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="22dp"
                        android:gravity="center|bottom"
                        android:text="累计500000步"
                        android:textColor="@color/black_alpha"
                        android:textSize="12sp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="20dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageButton
                        android:layout_gravity="center"
                        android:id="@+id/achievement_img_medal5"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:background="#00000000"
                        android:clickable="true"
                        android:scaleType="fitCenter"
                        android:src="@drawable/medal_5"></ImageButton>

                    <TextView
                        android:id="@+id/achievement_text_medal5"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="22dp"
                        android:gravity="center|bottom"
                        android:text="累计1000000步"
                        android:textColor="@color/black_alpha"
                        android:textSize="12sp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="20dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageButton
                        android:layout_gravity="center"
                        android:id="@+id/achievement_img_medal6"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:background="#00000000"
                        android:clickable="true"
                        android:scaleType="fitCenter"
                        android:src="@drawable/medal_6"></ImageButton>

                    <TextView
                        android:id="@+id/achievement_text_medal6"
                        android:layout_width="wrap_content"
                        android:layout_gravity="center"
                        android:layout_height="22dp"
                        android:gravity="center|bottom"
                        android:text="累计5000000步"
                        android:textColor="@color/black_alpha"
                        android:textSize="12sp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="20dp" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
