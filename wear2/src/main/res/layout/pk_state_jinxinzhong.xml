<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_swipe_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="66dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_pk_state_jinxing_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:src="@drawable/head_boy_normal" />


        <LinearLayout
            android:id="@+id/tv_swipe_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:orientation="vertical"
            android:text="name">

            <TextView
                android:id="@+id/tv_pk_state_jinxing_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="鸡腿"
                android:textColor="@android:color/black"
                android:textSize="16sp" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_marginTop="7dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_pk_state_jinxing_beizhu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3"
                android:layout_marginRight="1dp"
                android:textColor="@color/pull_refrsh_list_name_text"
                android:textSize="12sp" />

            <TextView
                android:text="天步数对决"
                android:textSize="12sp"
                android:textColor="@color/pull_refrsh_list_name_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
               </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <FrameLayout
        android:layout_width="66dp"
        android:layout_height="28dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="20dp">
    </FrameLayout>
</RelativeLayout>