<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_notice"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/com_titlebar2"
    android:orientation="vertical"
    android:fitsSystemWindows="true">

    <include layout="@layout/public_title2"/>

    <RelativeLayout
        android:id="@+id/rl_123"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/radius">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/come_call_notice"
            android:id="@+id/tv_notice_time"
            android:textColor="@color/text_ff9138_color"
            android:textSize="12sp"
            android:layout_marginStart="10dp"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/textView4" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/come_call_notice"
            android:textColor="@color/text_b3_color"
            android:textSize="14sp"
            android:id="@+id/textView4"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="20dp" />

        <com.cavytech.widget.SwitchButtonEx
            android:id="@+id/sbe_clock_item_call"
            android:layout_width="50dp"
            android:layout_height="26dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="20dp"
            android:checked="true" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_text_picker"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/notice1_bg"
        android:layout_width="match_parent"
        android:layout_height="120dp">

        <ImageView
            android:layout_marginTop="10dp"
            android:layout_width="180dp"
            android:layout_height="0.3dp"
            android:background="@color/view_time_line"/>

        <com.cavytech.widget.TextPick
            android:layout_marginBottom="18dp"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp"
            android:id="@+id/textpicker_wheel"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            />

        <ImageView
            android:layout_width="180dp"
            android:layout_height="0.3dp"
            android:background="@color/view_time_line"/>

    </LinearLayout>

    <RelativeLayout
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/come_message_notice"
            android:textColor="@color/color_textz_4d"
            android:textSize="12sp"
            android:layout_marginStart="10dp"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/textView6" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/come_message_notice_2"
            android:textColor="@color/text_b3_color"
            android:textSize="16sp"
            android:id="@+id/textView6"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="30dp" />

        <com.cavytech.widget.SwitchButtonEx
            android:id="@+id/sbe_clock_item_message"
            android:layout_width="50dp"
            android:layout_height="26dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="30dp"
            android:checked="true" />
    </RelativeLayout>
</LinearLayout>
