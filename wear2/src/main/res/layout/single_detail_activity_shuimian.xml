<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:gravity="center_vertical">

    <RelativeLayout
        android:layout_width="46dp"
        android:layout_height="76dp"
        android:id="@+id/relativeLayout"
        android:gravity="center"
        android:layout_marginLeft="30dp">

        <ImageView
            android:id="@+id/iv_first_sleep_shou"
            android:layout_width="46dp"
            android:layout_height="46dp"
            android:src="@drawable/icon_sleep"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/relativeLayout">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="@string/text_first_sleep"
            android:textColor="@color/text_color_first_name"
            android:textSize="16dp"
            android:textStyle="bold" />

        <TextView
            android:visibility="invisible"
            android:id="@+id/tv_first_sleep_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="18:26"
            android:textColor="@color/text_color_first_time"
            android:textSize="14dp"
            android:layout_marginStart="20dp"/>
    </LinearLayout>



    <LinearLayout
        android:layout_marginRight="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true">

        <TextView
            android:id="@+id/tv_first_sleep_hour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="6"
            android:textColor="@color/text_color_first_name"
            android:textSize="26sp"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/hours"
            android:textColor="@color/text_color_first_name"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/tv_first_sleep_minute"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="36"
            android:textColor="@color/text_color_first_name"
            android:textSize="26sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/minutes"
            android:textColor="@color/text_color_first_name"
            android:textSize="14sp"

            />
    </LinearLayout>
</RelativeLayout>