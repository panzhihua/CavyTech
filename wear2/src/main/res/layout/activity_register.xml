<com.zhy.android.percent.support.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/content_bg"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include layout="@layout/public_title"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        app:layout_heightPercent="28%w"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.zhy.android.percent.support.PercentLinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.zhy.android.percent.support.PercentLinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_heightPercent="36%w"
                app:layout_marginLeftPercent="8%w"
                app:layout_marginRightPercent="8%w"
                android:background="@drawable/corners_bg"
                android:orientation="vertical">

                <com.cavytech.widget.ClearEditText
                    android:id="@+id/input_account"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    app:layout_marginLeftPercent="4%w"
                    app:layout_marginRightPercent="4%w"
                    app:layout_heightPercent="12%sw"
                    style="@style/black16"
                    android:layout_marginRight="20dp"
                    android:background="@null"
                    android:hint="@string/input_tel"
                    android:inputType="number"
                    android:singleLine="true"
                    android:textColorHint="@color/hint_text_color"
                    android:textCursorDrawable="@null"/>
                <View
                    style="@style/dividerTheme1"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    app:layout_marginLeftPercent="4%w"
                    app:layout_marginRightPercent="4%w"
                    app:layout_heightPercent="12%sw"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:background="@null"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/input_verification"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_toLeftOf="@+id/view"
                        android:layout_weight="20"
                        android:background="@null"
                        style="@style/black16"
                        android:hint="@string/input_verification"
                        android:singleLine="true"
                        android:textColorHint="@color/hint_text_color"
                        android:textCursorDrawable="@null"/>

                    <View
                        android:id="@+id/view"
                        android:layout_width="1px"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="11dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="11dp"
                        android:background="@color/cut_off_rule" />

                    <TextView
                        android:id="@+id/send_verification"
                        style="@style/f14"
                        android:layout_width="90dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:clickable="true"
                        android:layout_gravity="center_vertical"
                        android:gravity="center"
                        android:text="@string/send_verification" />

                    <ImageView
                        android:id="@+id/image_verification"
                        android:layout_width="90dp"
                        android:layout_height="35dp"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:clickable="true"
                        android:gravity="center"
                        android:scaleType="fitXY"
                        android:visibility="gone" />
                </LinearLayout>
                <View
                    style="@style/dividerTheme1"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp" />

                <com.cavytech.widget.ClearEditText
                    android:id="@+id/input_password"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    app:layout_marginLeftPercent="4%w"
                    app:layout_marginRightPercent="4%w"
                    app:layout_heightPercent="12%sw"
                    android:background="@null"
                    style="@style/black16"
                    android:hint="@string/input_password"
                    android:singleLine="true"
                    android:textColorHint="@color/hint_text_color"
                    android:textCursorDrawable="@null" />
            </com.zhy.android.percent.support.PercentLinearLayout>

            <LinearLayout
                android:id="@+id/lin_agree"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/box_agree"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/check_box"
                    android:gravity="center"
                    android:drawablePadding="3dp"
                    android:button="@null"
                    android:text="@string/register_agree"
                    android:textColor="@color/text_agree_color"
                    android:textSize="12sp"
                    android:visibility="gone" />

                <TextView
                    android:includeFontPadding="false"
                    android:id="@+id/agree_context"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/treaty"
                    style="@style/c12"/>
            </LinearLayout>
            <TextView
                android:id="@+id/regter_account"
                style="@style/text3"
                android:layout_width="match_parent"
                app:layout_heightPercent="12%w"
                app:layout_marginLeftPercent="8%w"
                app:layout_marginRightPercent="8%w"
                android:background="@drawable/normal_button"
                android:clickable="true"
                android:gravity="center"
                android:text="@string/register_account" />
        </com.zhy.android.percent.support.PercentLinearLayout>
    </ScrollView>
</com.zhy.android.percent.support.PercentLinearLayout>