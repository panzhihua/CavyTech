<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/top_bg_color"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:orientation="vertical">

        <com.cavytech.widget.StepsPick
            android:background="@color/steps_select"
            android:id="@+id/day_wheel"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
           />
    </LinearLayout>


    <com.github.mikephil.charting.charts.BarChart
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="@color/top_bg_color"
        android:id="@+id/day_fragment_bar_chart"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_above="@+id/seekBar1" />

    <include layout="@layout/step_chatr_base"></include>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        android:orientation="horizontal" />

</LinearLayout>