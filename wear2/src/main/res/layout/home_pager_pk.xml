<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="76dp"
    android:gravity="center_vertical">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="46dp"
        android:layout_height="76dp"
        android:gravity="center"
        android:layout_marginLeft="30dp">


        <ImageView
            android:id="@+id/iv_first_pk_line_top"
            android:layout_width="2dp"
            android:layout_height="58dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:background="#e5e5e5" />

        <ImageView
            android:id="@+id/iv_first_pk_line_bottom"
            android:layout_width="2dp"
            android:layout_height="58dp"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/iv_first_pk_line_top"
            android:background="#e5e5e5" />

        <ImageView
            android:id="@+id/iv_first_pk_shou"
            android:layout_width="46dp"
            android:layout_height="46dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:src="@drawable/icon_fight" />
    </RelativeLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/relativeLayout"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_first_pk_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_first_pk"
                android:textColor="@color/text_color_first_name"
                android:textSize="16dp"
                android:textStyle="bold" />

            <TextView
                android:visibility="invisible"
                android:id="@+id/tv_first_pk_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="32dp"
                android:text="18:26"
                android:textColor="@color/text_color_first_time"
                android:textSize="14dp" />
        </LinearLayout>

        <TextView
            android:maxEms="4"
            android:singleLine="true"
            android:id="@+id/tv_first_pk_beizhu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="name"
            android:textColor="@color/text_color_first_pk_beizhu"
            android:textSize="14dp" />


    </LinearLayout>


    <TextView
        android:id="@+id/tv_first_pk_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:text="胜利了！"
        android:layout_marginRight="30dp"
        android:textColor="@color/text_color_first_name"
        android:textSize="24sp"
        android:textStyle="bold" />
</RelativeLayout>