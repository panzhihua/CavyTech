<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_sliding_memn"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:background="@color/sliding_head"
        android:orientation="vertical" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:background="@color/sliding_head">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/iv_slidingmenu_right_progress_head_icon"
            android:layout_marginLeft="32dp"
            android:text="@string/cavy_band_3"
            android:textColor="@color/tv_sliding_name"
            android:textSize="16sp" />

        <FrameLayout
            android:id="@+id/iv_slidingmenu_right_progress_head_icon"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="46dp">



            <com.mikhaellopez.circularfillableloaders.CircularFillableLoaders
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@drawable/band_power_bg"
                app:cfl_border="true"
                app:cfl_border_width="3dp"
                android:id="@+id/circularFillableLoaders"
                app:cfl_wave_color="#36e0ff"
                app:cfl_wave_amplitude="0.02"/>

            <TextView
                android:id="@+id/tv_electricityProgress"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="0%"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/iv_no_band_icon"
                android:visibility="gone"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:background="@drawable/rightbar_disconnected"/>
        </FrameLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/iv_slidingmenu_right_progress_head_icon"
            android:layout_alignStart="@+id/textView3"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_rom_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="FASDKTS 001"
                android:textColor="@color/tv_sliding_youxiang"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_rom_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="固件版本"
                android:textColor="@color/tv_sliding_youxiang"
                android:textSize="12sp" />
        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/pll_sliding_foot"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/sliding_foot"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ll_comtral_camera"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/ll_slingding_bg"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_right_carmer"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="32dp"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/icon_camera" />

                <TextView
                    android:id="@+id/tv_right_carmer"
                    style="@style/a14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/control_camera" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_band_notice"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/ll_slingding_bg"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_right_tixing"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="32dp"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/icon_bandnotice" />

                <TextView
                    android:id="@+id/tv_right_tixing"
                    style="@style/a14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/remind" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_know_clock"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/ll_slingding_bg"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_right_notice"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="32dp"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/icon_clock" />

                <TextView
                    android:id="@+id/tv_notice"
                    style="@style/a14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/know_clock" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_safe"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/ll_slingding_bg"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_right_sercity"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="32dp"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/icon_safe" />

                <TextView
                    android:id="@+id/tv_right_sercity"
                    style="@style/a14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/safe" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.3dp"
                android:layout_marginBottom="4dp"
                android:layout_marginLeft="32dp"
                android:layout_marginTop="4dp"
                android:background="#80ffffff" />

            <LinearLayout
                android:id="@+id/ll_rom_update"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/ll_slingding_bg"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_right_gujian"
                    style="@style/a14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="32dp"
                    android:text="@string/update_rom" />

                <ImageView
                    android:id="@+id/iv_fw"
                    android:layout_width="20dp"
                    android:layout_height="15dp"
                    android:layout_marginLeft="5dp"
                    android:layout_gravity="center"
                    android:src="@drawable/fw"
                    android:visibility="gone"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.3dp"
                android:layout_marginBottom="4dp"
                android:layout_marginLeft="32dp"
                android:layout_marginTop="4dp"
                android:background="#80ffffff" />

            <LinearLayout
                android:id="@+id/ll_new_band_cavy"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/ll_slingding_bg"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    style="@style/a14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="32dp"
                    android:text="@string/band_new_cavy" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>