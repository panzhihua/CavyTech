                <TextView
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/Sbeizhu"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_mingcheng"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"
                    android:text="@string/exnicheng"
                    android:textColor="@color/text_4d_color"
                    android:textSize="16sp" />

            </RelativeLayout>-->

            <RelativeLayout style="@style/contactitem">

                <TextView
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/city"
                    android:textColor="@color/text_4d_color"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_single_city"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"
                    android:text="中国 杭州"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

            </RelativeLayout>

            <RelativeLayout style="@style/contactitem">

                <TextView
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/old"
                    android:textColor="@color/text_4d_color"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_single_old"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"
                    android:text="中国 杭州"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

            </RelativeLayout>

            <RelativeLayout style="@style/contactitem">

                <TextView
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/sex"
                    android:textColor="@color/text_4d_color"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_single_sex"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"
                    android:text="中国 杭州"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

            </RelativeLayout>


            <ImageView
                android:id="@+id/iv_rival_add"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_below="@+id/select_duel"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="18dp"
                android:src="@drawable/icon_head_add_selecd"
                android:layout_gravity="center_horizontal" />

        </LinearLayout>

    </ScrollView>

