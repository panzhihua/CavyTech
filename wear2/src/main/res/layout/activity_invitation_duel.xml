<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/com_titlebar2"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include layout="@layout/toobar" />

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="426dp"
        android:layout_gravity="center"
        android:background="@color/com_titlebar2">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="390dp"
            android:background="@color/white">

            <TextView
                android:id="@+id/select_duel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                android:gravity="center"
                android:text="@string/duel_select"
                android:textColor="@color/text_b3_color"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/iv_rival_add"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_below="@+id/select_duel"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="18dp"
                android:src="@drawable/icon_head_add_selecd" />

            <TextView
                android:id="@+id/tv_select_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv_rival_add"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                android:text="@string/select_data_ravil"
                android:textColor="@color/text_b3_color"
                android:textSize="16sp" />


            <LinearLayout
                android:id="@+id/iv_select_splite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_select_data"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="18dp"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="180dp"
                    android:layout_height="1dp"
                    android:background="@color/view_time_line" />

                <FrameLayout
                    android:layout_width="180dp"
                    android:layout_height="60dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <com.cavytech.widget.TextPick
                            android:id="@+id/tp_select_splite"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />

                    </LinearLayout>

                </FrameLayout>

                <ImageView
                    android:layout_width="180dp"
                    android:layout_height="1dp"
                    android:background="@color/view_time_line" />
            </LinearLayout>


            <TextView
                android:id="@+id/tv_pk_fifa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv_select_splite"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="18dp"
                android:text="@string/tv_pk_fifa"
                android:textColor="@color/text_b3_color"
                android:textSize="16sp" />

            <RadioGroup
                android:id="@+id/rg_invitation"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_below="@+id/tv_pk_fifa"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="18dp"
                android:gravity="center"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/rb_pk_detail_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginRight="9dp"
                    android:button="@null"
                    android:text="对决双方可见"
                    android:textColor="@drawable/text_select_inviaction" />

                <RadioButton
                    android:id="@+id/rb_pk_detail_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="9dp"
                    android:button="@null"
                    android:text="所有好友可见"
                    android:textColor="@drawable/text_select_inviaction" />
            </RadioGroup>

        </RelativeLayout>

        <ImageView
            android:id="@+id/iv_pk_next"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/iv_select_pk_bg_select" />


    </RelativeLayout>

</LinearLayout>
