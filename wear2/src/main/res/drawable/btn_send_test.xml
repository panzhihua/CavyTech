<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >

    <item android:state_pressed="false" >
        <shape>
            <corners
                android:radius="2dp"
                />
            <gradient
                android:gradientRadius="100"
                android:startColor="#ffd954"
                android:endColor="#ffd954"
                android:type="radial"
                />
            <size
                android:width="66dp"
                android:height="28dp"
                />
        </shape>
    </item>

    <item android:state_pressed="true" >
        <shape>
            <corners
                android:radius="2dp"
                />
            <gradient
                android:gradientRadius="100"
                android:centerX="35%"
                android:centerY="50%"
                android:startColor="#ecbc46"
                android:endColor="#ecbc46"
                android:type="radial"
                />
            <size
                android:width="66dp"
                android:height="28dp"
                />
        </shape>
    </item>
</selector>