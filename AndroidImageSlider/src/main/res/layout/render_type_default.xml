<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">
   <!-- <ImageView
        android:id="@+id/daimajia_slider_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />-->
    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/daimajia_slider_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        fresco:fadeDuration="300"
        fresco:actualImageScaleType="focusCrop"
        fresco:placeholderImage="@drawable/banner_hui_3"
        fresco:placeholderImageScaleType="centerCrop"
        fresco:failureImage="@drawable/banner_hui_3"
        fresco:failureImageScaleType="centerCrop"
        fresco:roundedCornerRadius="6dp"
        fresco:roundingBorderWidth="0.5dp"
        fresco:roundingBorderColor="#50000000"
        />
    <ProgressBar
        android:id="@+id/loading_bar"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>