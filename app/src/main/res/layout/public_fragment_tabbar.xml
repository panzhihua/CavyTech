<com.tunshu.widget.SyncHorizontalScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mHsv"
    android:layout_width="fill_parent"
    android:layout_height="47dip"
    android:layout_below="@+id/title_layout"
    android:background="@color/background"
    android:scrollbars="none">

    <RelativeLayout
        android:id="@+id/rl_nav"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top">

        <RadioGroup
            android:id="@+id/rg_nav_content"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_alignParentTop="true"
            android:orientation="horizontal" />

        <ImageView
            android:id="@+id/iv_nav_indicator"
            android:layout_width="1dp"
            android:layout_height="1.5dp"
            android:layout_alignBottom="@+id/rg_nav_content"
            android:background="@color/indicator_background"
            android:scaleType="matrix"/>
    </RelativeLayout>
</com.tunshu.widget.SyncHorizontalScrollView>