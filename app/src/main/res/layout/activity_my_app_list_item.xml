<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <View
        android:layout_width="fill_parent"
        android:layout_height="5dp"
        android:background="@color/background" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="86dp"
        android:background="@drawable/item_white_bg"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/app_img"
            android:layout_width="66dp"
            android:layout_height="66dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/icon_game" />
        <!--  <com.facebook.drawee.view.SimpleDraweeView
              android:id="@+id/app_img"
              android:layout_width="66dp"
              android:layout_height="66dp"
              android:layout_marginBottom="10dp"
              android:layout_marginTop="10dp"
              android:layout_marginLeft="10dp"
              fresco:actualImageScaleType="focusCrop"
              fresco:fadeDuration="300"
              fresco:failureImage="@drawable/icon_game"
              fresco:failureImageScaleType="centerCrop"
              fresco:placeholderImageScaleType="centerCrop"
              fresco:roundedCornerRadius="10dp" />-->

        <TextView
            android:id="@+id/app_name"
            style="@style/black17"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="109dp"
            android:layout_toRightOf="@id/app_img"
            android:includeFontPadding="false"
            android:singleLine="true" />


        <TextView
            android:id="@+id/app_download"
            style="@style/white14"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/down_button_blue"
            android:clickable="true"
            android:gravity="center" />

        <View
            style="@style/dividerTheme1"
            android:layout_alignParentBottom="true" />
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="3dp"
        android:background="@color/background" />
</LinearLayout>