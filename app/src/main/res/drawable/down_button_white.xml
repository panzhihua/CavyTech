<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
   <!-- <item android:drawable="@drawable/down_button_white_pressed" android:state_pressed="true"/>
    <item android:drawable="@drawable/down_button_white_normal" android:state_pressed="false"/>-->
    <item android:state_pressed="true">
        <layer-list>
            <item>
                <shape>
                    <solid android:color="@color/transparent" />
                </shape>
            </item>
            <item  >
                <shape>
                    <!-- 中间的背景色 -->
                    <solid android:color="@color/bt_bg_color_pressed_solid" />
                    <!-- 设置四个角的角度 -->

                    <corners
                        android:radius="4dp" />
                    <!-- 边缘线的宽度和颜色 -->
                    <stroke
                        android:width="1dp"
                        android:color="@color/bt_bg_color_pressed_stroke" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item android:state_pressed="false">
        <layer-list>
            <item>
                <shape>
                    <solid android:color="@color/transparent" />
                </shape>
            </item>
            <item  >
                <shape>
                    <!-- 中间的背景色 -->
                    <solid android:color="@color/bt_bg_color_normal_solid" />
                    <!-- 设置四个角的角度 -->

                    <corners
                        android:radius="4dp" />
                    <!-- 边缘线的宽度和颜色 -->
                    <stroke
                        android:width="1dp"
                        android:color="@color/bt_bg_color_normal_stroke" />
                </shape>
            </item>

        </layer-list>
    </item>
</selector>