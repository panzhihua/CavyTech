<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/special_bg"
    android:orientation="vertical">
    <View
        android:id="@+id/divider_layout1"
        android:layout_width="fill_parent"
        android:layout_height="5dp"
        android:background="@color/background" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="?attr/special_item_bg"
        android:orientation="vertical">


        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/app_img"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            fresco:actualImageScaleType="focusCrop"
            fresco:fadeDuration="300"
            fresco:failureImage="@drawable/icon_game"
            fresco:failureImageScaleType="centerCrop"
            fresco:placeholderImage="@drawable/icon_game"
            fresco:placeholderImageScaleType="centerCrop"
            fresco:roundedCornerRadius="10dp" />

        <TextView
            android:id="@+id/app_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/app_img"
            android:layout_marginLeft="13dp"
            android:layout_marginRight="109dp"
            android:layout_toRightOf="@id/app_img"
            android:includeFontPadding="false"
            android:singleLine="true"
            android:textColor="?attr/special_item_title_color"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/app_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/app_img"
            android:layout_marginLeft="13dp"
            android:layout_marginRight="15dp"
            android:layout_toRightOf="@id/app_img"
            android:includeFontPadding="false"
            android:lineSpacingExtra="4dp"
            android:maxLines="2"
            android:textColor="?attr/special_item_content_color"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/app_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/app_name"
            android:layout_marginLeft="13dp"
            android:layout_marginTop="4dp"
            android:layout_toRightOf="@id/app_img"
            android:includeFontPadding="false"
            android:textColor="?attr/special_item_content_color"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/app_download"
            android:layout_width="104dp"
            android:layout_height="62dp"
            android:layout_alignParentRight="true"
            android:background="?attr/special_button_bg_1"
            android:gravity="center"
            android:text="@string/download_manager"
            android:textSize="13sp" />

        <View
            android:id="@+id/divider_1"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_alignParentBottom="true"
            android:background="?attr/special_item_divider" />
        <View
            android:id="@+id/divider_2"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_alignParentBottom="true"
            android:visibility="gone"
            android:background="?attr/special_item_divider" />

    </RelativeLayout>

    <View
        android:id="@+id/divider_layout2"
        android:layout_width="fill_parent"
        android:layout_height="3dp"
        android:background="@color/background" />
</LinearLayout>