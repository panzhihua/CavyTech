<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <View
        android:layout_width="fill_parent"
        android:layout_height="5dp"
        android:background="@color/transparent" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <RelativeLayout
            android:id="@+id/classify_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/classify_title"
                style="@style/black17"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:includeFontPadding="false"
                android:layout_marginLeft="15dp"
                android:gravity="center_vertical" />

            <TextView
                android:id="@+id/show_all"
                style="@style/hui14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/classify_title"
                android:layout_alignParentRight="true"
                android:layout_marginRight="15dp"
                android:clickable="true"
                android:includeFontPadding="false"
                android:drawablePadding="5dp"
                android:gravity="center_vertical"
                android:drawableRight="@drawable/icon_next"
                android:text="@string/show_all" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/rool_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:layout_below="@+id/classify_layout"
            android:orientation="horizontal">

            <View
                android:layout_width="12.5dp"
                android:layout_height="fill_parent"
                android:layout_weight="1" />

            <include
                layout="@layout/activity_classify_roll_item1"
                android:layout_width="90dp"
                android:layout_height="match_parent" />

            <View
                android:layout_width="12.5dp"
                android:layout_height="fill_parent"
                android:layout_weight="1" />

            <include
                layout="@layout/activity_classify_roll_item2"
                android:layout_width="90dp"
                android:layout_height="match_parent" />

            <View
                android:layout_width="12.5dp"
                android:layout_height="fill_parent"
                android:layout_weight="1" />

            <include
                layout="@layout/activity_classify_roll_item3"
                android:layout_width="90dp"
                android:layout_height="match_parent" />

            <View
                android:layout_width="12.5dp"
                android:layout_height="fill_parent"
                android:layout_weight="1" />
            <include
                layout="@layout/activity_classify_roll_item4"
                android:layout_width="90dp"
                android:layout_height="match_parent" />

            <View
                android:id="@+id/divider_right"
                android:layout_width="12.5dp"
                android:layout_height="fill_parent"
                android:layout_weight="1" />
        </LinearLayout>

        <View
            style="@style/dividerTheme1"
            android:layout_below="@+id/rool_layout"
            android:layout_marginTop="16dp" />

    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="3dp"
        android:background="@color/transparent" />
</LinearLayout>