<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:orientation="vertical">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/item_image2"
        android:layout_width="90dp"
        android:layout_height="90dp"
        fresco:actualImageScaleType="centerCrop"
        fresco:fadeDuration="300"
        fresco:failureImage="@drawable/icon_game"
        fresco:failureImageScaleType="centerCrop"
        fresco:pressedStateOverlayImage="@drawable/image_cover_10"
        fresco:placeholderImage="@drawable/icon_game"
        fresco:placeholderImageScaleType="centerCrop"
        fresco:roundedCornerRadius="10dp" />

    <TextView
        android:id="@+id/item_name2"
        style="@style/black16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/item_image2"
        android:layout_below="@+id/item_image2"
        android:layout_marginRight="5dp"
        android:layout_marginTop="6dp"
        android:includeFontPadding="false"
        android:singleLine="true" />

    <TextView
        android:id="@+id/item_size2"
        style="@style/hui13"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/item_image2"
        android:layout_below="@+id/item_name2"
        android:layout_marginTop="6dp"
        android:includeFontPadding="false"
        android:singleLine="true" />

    <TextView
        android:id="@+id/item_content2"
        style="@style/hui13"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/item_image2"
        android:layout_below="@id/item_size2"
        android:layout_marginTop="10dp"
        android:singleLine="true" />

    <TextView
        android:id="@+id/item_action2"
        android:layout_width="90dp"
        android:layout_height="32dp"
        android:layout_below="@id/item_content2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="6dp"
        android:background="@drawable/down_button_white"
        android:clickable="true"
        android:gravity="center"
        android:text="@string/download_manager"
        android:textColor="@drawable/bt_text_color_white"
        android:textSize="13sp" />

</RelativeLayout>